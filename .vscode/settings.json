{
    "twee3LanguageTools.storyformat.current": "sugarcube-2",
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".*\\.(twee)|(js)$",
                "cmd": "tweego src/ -o Coherence.html -t"
            }
        ]
    },
    "liveServer.settings.ignoreFiles": ["**/*.tw", "**/*.twee", "**/*.js", "**/*.ts"],
    "cSpell.words": ["ifid", "Interactable", "Interactables"],
    "twee3LanguageTools.passage.list": true,
    "editor.formatOnSave": true,
    "editor.rulers": [100],
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always"
    }
}
